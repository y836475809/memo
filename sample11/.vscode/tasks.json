{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "go",
			"label": "go: build package",
			"command": "build",
			"args": [
                "-gcflags=all=-N -l",
                "-o",
                "${fileDirname}"
            ],
			"problemMatcher": [
				"$go"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "go build -gcflags=all=-N -l -o ${fileDirname}"
		},
		{
			"type": "go",
			"label": "go: build unit test",
			"command": "test",
			"args": [
				"-c",
                "-gcflags=all=-N -l",
                "-o",
                "${fileDirname}"
            ],
			"problemMatcher": [
				"$go"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "go test -gcflags=all=-N -l -o ${fileDirname}"
		}
	]
}